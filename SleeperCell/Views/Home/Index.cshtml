@section Scripts{
    <script>
        var productCurosr = 0;
        $(document).ready(function (event) {
            getProducts(productCurosr,4);
        });

        function loadNext() {
            productCurosr += 4;
            getProducts(productCurosr,4)
        }
        function getProducts(start, count) {
            $.ajax({
                type: "GET",
                url: "/product/info/"+start+"/"+count+"",
                success: function(data){
                    console.log(data);
                    $.each(data, function (i, Product) {
                        var ListItem = "<li class='item'>"+
                            " <div class='product-img'> " +
                            " <img src='/Content/images/default-50x50.gif' alt='Product Image'>" +
                            "</div>" +
                            "<div class='product-info'>" +
                            "<a href='/Products/Details/"+Product.Id+"' class= 'product-title' >" + Product.Name +

                            "<span class='label label-info pull-right'>" +'$'+ Product.UnitPrice + "</span>" +
                            "</a>" +
                            "<span class='product-description'>" +
                            Product.Description +
                            "</span>" +
                            "</div>" +
                            "</li>";
                        $('#ProductList').append(ListItem);
                    });
                },
                error: function (error) {
                    console.log(error);
                }
            });
        }
    </script>
}
